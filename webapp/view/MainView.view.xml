<mvc:View
    controllerName="hds.ui5.todolistBasic.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page id="page">
        <content>
            <Input
                id="inputTask"
                submit="submitTaskHandler" 
                class="sapUiSmallMarginEnd sapUiSmallMarginBegin sapUiContentPadding"
                width="250px"
                placeholder="Please add new task"/>
            <Button 
                id="deleteTaskBtn" 
                type="Reject"
                text="Delet" 
                class="sapUiSmallMarginEnd"
                icon="sap-icon://delete"
                press="deleteTaskHandler" 
                width="80px"
                enabled="false"/>
            <Button 
                id="completeTaskBtn" 
                text="Complete"
                type="Accept"
                class="inputTask"
                icon="sap-icon://complete"
                press="markCompleteTaskHandler" 
                width="100px"
                enabled="false"/>
            <Panel 
                id="panel__pendingTasks" 
                expandable="true" 
                expanded="false" 
                headerText="Pending tasks" 
                class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiSmallMarginBottom"
                height="auto"
                width="80%"
                expand="expandPendingPanelHandler">
                <List
                    id="taskList_pending"
                    includeItemInSelection="true"
                    mode="SingleSelectLeft"
                    selectionChange="selectTaskHandler" >
                    <items>
                        <StandardListItem
                            id="todoLIistItemPending"
                            title="{title}" />
                    </items>
                </List>
            </Panel>
            <Panel id="panel__completedTasks" expandable="true" headerText="Completed tasks" width="80%" class="sapUiSmallMarginBegin">
                <List id="taskList_completed">
                    <items>
                        <StandardListItem id="todolistItemCompleted" title="{title}"/>
                    </items>
                </List>
            </Panel>
        </content>
        <footer>
            <Toolbar id="toolbarFooter">
                <Text
                    id="footertext"
                    text="this is footer"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
